<script>
function toggleMenu(){
const m=document.getElementById('mobileMenu');
m.style.display=m.style.display==='block'?'none':'block';
}
function openTeamModal(){
document.getElementById('teamModal').style.display='flex';
}
function closeTeamModal(){
document.getElementById('teamModal').style.display='none';
}

/* FAQ */
document.querySelectorAll('.faq-question').forEach(q=>{
q.onclick=()=>q.parentElement.classList.toggle('active');
});

/* COUNT UP */
const counters=document.querySelectorAll('.stat-number');
let done=false;
window.addEventListener('scroll',()=>{
if(done) return;
if(document.querySelector('.stats').getBoundingClientRect().top<window.innerHeight){
done=true;
counters.forEach(c=>{
let t=+c.dataset.target,i=0;
let int=setInterval(()=>{
i++;c.innerText=i;
if(i>=t) clearInterval(int);
},20);
});
}
});

/* CASE AUTO SLIDE */
let idx=0;
setInterval(()=>{
idx=(idx+1)%2;
document.getElementById('caseTrack').style.transform=`translateX(-${idx*100}%)`;
},6000);
</script>

